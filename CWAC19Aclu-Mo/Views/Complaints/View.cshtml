@model CWAC19AcluMo.Models.Complaint
@{
    ViewData["Title"] = "View";
}

<div class="container">
    <div class="row justify-content-center">
        <h2>Viewing Complaints for @Model.Client.Email</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-sm-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>Complaint No.</th>
                        <th>Complaint Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.ComplaintNo</td>
                        <td>
                            @Model.Status.Status
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>