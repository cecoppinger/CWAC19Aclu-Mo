@model CWAC19AcluMo.Models.ClientProfile
@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<div class="row justify-content-center">
    <h3>Viewing Complaints for @Model.Email</h3>
</div>

<div class="row justify-content-center">
    <div class="col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Complaint No.</th>
                    <th>Complaint Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var complaint in Model.Complaints)
                {
                    <tr>
                        <td>@complaint.ComplaintNo</td>
                        <td>@complaint.Status.StatusCode</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>