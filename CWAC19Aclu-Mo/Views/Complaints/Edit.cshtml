@model CWAC19AcluMo.ViewModels.EditComplaintViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Complaint for Complaint #: @Model.ComplaintNo</h2>

<div class="row">
    <div class="col-sm-4">
        <div></div>
        <form method="post">
            <div class="form-group">
                <label asp-for="StatusID"></label>
                <select asp-for="StatusID" asp-items="@Model.StatusCodes"></select>
                <input type="hidden" asp-for="ComplaintID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" />
            </div>
        </form>
    </div>
</div>


